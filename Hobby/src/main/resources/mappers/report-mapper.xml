<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="report">
	
	<select id="allList" resultType="rvo">
		select * from REPORT where u_idx1 = 1 
	</select>
	
	<insert id="insert" parameterType="rvo">
		insert into REPORT (r_content,r_name)
		values(#{r_content},#{r_name})
	</insert>
	
	<select id="detail" parameterType="String" resultType="rvo">
		select * from REPORT where r_idx = #{r_idx}
	</select>
	
	<update id="update" parameterType="rvo">
		update REPORT set r_name = #{r_name},  r_content = #{r_content}  where r_idx = #{r_idx}
	</update>
	
	<update id="delete" parameterType="String">
		update REPORT set r_status = 0 where r_idx = #{r_idx}
	</update>
</mapper>








